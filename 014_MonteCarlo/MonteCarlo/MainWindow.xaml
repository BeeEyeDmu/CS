<Window x:Class="MonteCarlo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonteCarlo"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="450">
  <StackPanel Name="grid">
    <Canvas Name="Canvas1" Height="400" Width="400">
      <Rectangle Stroke="Black" Width="400" Height="400" ></Rectangle>
      <Ellipse Stroke="SlateBlue" Width="400" Height="400" ></Ellipse>
    </Canvas>
    <StatusBar Background="White" Margin="20,5">
      <TextBlock Name="txtInfo"></TextBlock>
    </StatusBar>
  </StackPanel>
</Window>
